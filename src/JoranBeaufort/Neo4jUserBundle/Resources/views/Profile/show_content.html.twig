<div class="container">
    <!--Card-->
    <div class="card">
        <div class="row">  
        <!--Card image-->
            <div class="col-md-3">
                {% if user.profileImage is null %}
                <img style="padding:10px; height:180px; width: 180px;" src="{{ asset('/defaults/user.png') }}">    
                {% else %}
                <img style="padding:10px; height:180px; width: 180px;" src="{{ asset('/users/'~user.uid~'/'~user.profileImage) }}"> 
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and user.getUsername() == app.user.username %}
                <a href="{{ path('neo4j_profile_edit', {'slug': app.user.username}) }}" class="btn btn-primary">Edit&nbsp;&nbsp;<i class="fa fa-cog"></i></a>
                {% endif %}  
            </div>
        <!--/.Card image-->

            <!--Card content-->
            <div class="col-md-9">
                <div class="card-block">
                    <!--Title-->
                    <h4 class="card-title">{{ user.getUserName() }}</h4>
                    <!--Text-->
                        {% if user.getProfileDescription() != '' %}
                        <p class="text-justify"> {{ user.getProfileDescription() }}</p>
                        {% endif %}
                     
                </div>
                <!--/.Card content-->
            </div>
        </div>
        <hr>
        <div class="card">
            <div class="row">
                <div class="card-block">     
                    <div class="col-md-12">
                    <h2 class="card-header primary-color white-text">Rohstoffe</h2>
                    </div>
                    {% for resource in user.getUserResources %}
                    <div class="col-md-4">
                        <!--Card Success-->
                        <div style="background-color: {{ resource.getResource.getColour }}" class="card text-xs-center z-depth-2">
                            <div style="color:#fff" class="card-block">
                                <h2>{{ resource.getResource.getName_DE }}</h2>                             
                                <p style="font-size:40px; color:{{resource.getResource.getIconColour }}">{{ resource.getAmount }} X <i  class="fa {{ resource.getResource.getIcon }}"></i></p>
                            </div>
                        </div>
                        <!--/.Card Success-->
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<!--/.Card-->


{% extends 'base.html.twig' %}
{% block title %}Inventar{% endblock %} 
    {% block content %}
        <!--Mask-->
    <div class="container">
        <div class="row">
            <div class="col-xs-12"> 
                <div class="card text-xs-center">                
                    <h3 class="card-header primary-color white-text">Mein Inventar!&nbsp;&nbsp;
                        <!-- Trigger the modal with a button -->
                        <a style="color:white" data-toggle="modal" data-target="#help"><strong><i class="fa fa-question-circle" aria-hidden="true"></i></strong></a>
                    </h3>
                    <!-- Modal -->
                        <div class="modal fade" id="help" role="dialog">
                          <div class="modal-dialog">
                          
                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                              </div>
                              <div class="modal-body text-xs-left ">
                                  <div class="alert alert-info" role="alert">
                                      <h4 class="modal-title">Zur Info:</h4>
                                      <p>Hier hast du einblick in deine Resourcen und Gegenst채nde.</p>
                                      <br>
                                      <p>Benutze den Sternenh채ndler um Resourcen gegen Gegenst채nde einzutauschen.</p>
                                  </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                              </div>
                            </div>
                          </div>
                        </div>                        
                        <div class="card-block">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="card">
                                        <div class="card-header  rgba-green-strong white-text">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <img  class="img-circle" style="background-color:white; border:solid grey; padding:10px; width:150px; height:150px" src="{{ asset( 'img/Scales-96.png')}}"/>
                                                </div>
                                                <div class="col-md-10 text-xs-left">      
                                                     <div style="width:100%; border-radius:20px; padding:10px; height:80px" class="rgba-grey-light">
                                                         <strong>Sternenh채ndler</strong><br>
                                                         <p>
                                                     </div>
                                                </div>
                                            </div>
                                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="card text-xs-center ">
                                        <div class="card-header default-color white-text">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <p>Meine Resourcen</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                {% for resource in user.getUserResources %}
                                                <div class="col-md-4 col-lg-2">
                                                    <!--Card Success-->
                                                    <div style="background-color: {{ resource.getResource.getColour }}" class="card text-xs-center z-depth-2">
                                                        <div style="color:#fff" class="card-block">
                                                            <b>{{ resource.getResource.getName_DE }}</b>                             
                                                            <p style="font-size:30px; color:{{resource.getResource.getIconColour }}">{{ resource.getAmount }} X <i  class="fa {{ resource.getResource.getIcon }}"></i></p>
                                                        </div>
                                                    </div>
                                                    <!--/.Card Success-->
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   <!--/.Mask-->
   {% endblock content %}


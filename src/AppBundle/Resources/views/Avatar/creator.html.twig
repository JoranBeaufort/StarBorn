{% extends 'base.html.twig' %}

{% block title %}Team Auswahl{% endblock %} 
{% block css %}
    {{ parent() }}
	<link href="{{ asset('svgavatars/css/spectrum.css') }}" rel="stylesheet">
	<link href="{{ asset('svgavatars/css/svgavatars.css') }}" rel="stylesheet">
	
	<link href="http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700|Roboto:400,300,500,700&subset=latin,cyrillic-ext,cyrillic,latin-ext" rel="stylesheet" type="text/css">
    
{% endblock css %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12"> 
                <div class="card text-xs-center">                
                    <h3 class="card-header primary-color white-text">Charaktererstellung!&nbsp;&nbsp;
                        <!-- Trigger the modal with a button -->
                        <a style="color:white" data-toggle="modal" data-target="#help"><strong><i class="fa fa-question-circle" aria-hidden="true"></i></strong></a>
                    </h3>
                    <!-- Modal -->
                        <div class="modal fade" id="help" role="dialog">
                          <div class="modal-dialog">
                          
                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                              </div>
                              <div class="modal-body ">
                                  <div class="alert alert-info" role="alert">
                                      <h4 class="modal-title">Zur Info:</h4>
                                      <p> Erstelle hier deinen Charakter</p>
                                  </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                              </div>
                            </div>
                          </div>
                        </div>

                    <div class="card-block">
                        <div id="svgAvatars"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
{% endblock content %}
{% block javascript %}
    {{ parent() }}
    <script>
        var userid = "{{ user.getUid }}";
        var avatar_upload_path = "../..{{ path('avatar_upload') }}";
        var success_redirect_path="../..{{ path('team_apply') }}";
    </script>
	<script src="{{ asset('svgavatars/js/svg.min.js') }}"></script>
	<script src="{{ asset('svgavatars/js/spectrum.min.js') }}"></script>
	<script src="{{ asset('svgavatars/js/jquery.scrollbar.min.js') }}"></script>
	<script src="{{ asset('svgavatars/js/canvg/rgbcolor.js') }}"></script> 
	<script src="{{ asset('svgavatars/js/canvg/StackBlur.js') }}"></script>
	<script src="{{ asset('svgavatars/js/canvg/canvg.js') }}"></script>
	<script src="{{ asset('svgavatars/js/svgavatars.de.js') }}"></script>
	<script src="{{ asset('svgavatars/js/svgavatars.core.js') }}"></script>

{% endblock javascript %}


{% extends 'base.html.twig' %}

{% block title %}Angreifen{% endblock %} 
{% block content %}
    <!--Mask-->
    <div class="container">
        <div class="row">
            <div class="col-xs-12"> 
                <div class="card text-xs-center">                
                    <h3 class="card-header primary-color white-text">Angriff!&nbsp;&nbsp;
                        <!-- Trigger the modal with a button -->
                        <a style="color:white" data-toggle="modal" data-target="#help"><strong><i class="fa fa-question-circle" aria-hidden="true"></i></strong></a>
                    </h3>
                    <!-- Modal -->
                        <div class="modal fade" id="help" role="dialog">
                          <div class="modal-dialog">
                          
                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                              </div>
                              <div class="modal-body ">
                                  <div class="alert alert-danger" role="alert">
                                      <h4 class="modal-title">Achtung:</h4>
                                      <p>Dieses gebiet gehört einem feindlichen Spieler, bekannt unter dem Namen <strong></strong>!</p>
                                  </div>
                                  <div class="alert alert-info" role="alert">
                                      <h4 class="modal-title">Zur Info:</h4>
                                      <p> Du hast in diesem Gebiet eine feindliche Presänz entdeckt! Greiffe die feindlichen Strukturen an um das Gebiet wieder freizugeben und selber einzunehmen!</p>
                                  </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                              </div>
                            </div>
                          </div>
                        </div>

                    <div class="card-block">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="card text-xs-center">
                                    <div class="card-header default-color white-text">
                                        <div class="row">
                                            <div class="col-md-offset-4 col-md-4">
                                                <div style="margin-bottom:5px; border-radius:20px;" class="rgba-grey-light">
                                                <div class="row">
                                                    <button style="width:90%; border-radius:20px;" class="btn rgba-stylish-strong waves-effect">Schild</button>
                                                </div>
                                                <div class="row">
                                                    <img  class="img-circle" style="background-color:white; border:solid grey; padding:10px; width:150px; height:150px" src="{{ asset('img/Shield-96.png')}}"/>
                                                </div>
                                                <div class="row">
                                                     <button style="width:90%; border-radius:20px;" class="btn rgba-stylish-strong waves-effect"><strong>{{ structure.getName_DE }}</strong><br>
                                                     {{ structure.getHp }} / {{ structure.getHp }}<br>
                                                     <progress class="progress progress-success" value="{{ tile.getTileBuilding.getHp }}" max="{{tile.getTileBuilding.getBuilding.getHp }}" style="color:000">25%</progress>
                                                     </button>
                                                </div>
                                                    <div class="row">
                                                        <div class="col-xs-6">
                                                            <form method="post" action="{{ path('attack')}}">
                                                                <input type="hidden" name="ulat" value="{{ uLat }}">
                                                                <input type="hidden" name="ulng" value="{{ uLng }}">
                                                                <input type="hidden" name="t" value="shield">
                                                                <input type="hidden" name="tid" value="{{ tile.getId }}">                                                
                                                                <input type="hidden" name="a" value="{{ user.getUid()|urlencrypt }}">                                       
                                                                <button style="border-radius:40px; width:80px; height:80px" class="btn rgba-stylish-strong waves-effect" type="submit"><img style="padding:5px; width:50px; height:50px" src="{{ asset('img/Laser Beam-96.png')}}"/></button>
                                                            </form>
                                                        </div>
                                                        <div class="col-xs-6">
                                                            <form method="post" action="{{ path('attack')}}">
                                                                <input type="hidden" name="ulat" value="{{ uLat }}">
                                                                <input type="hidden" name="ulng" value="{{ uLng }}">
                                                                <input type="hidden" name="t" value="shield">
                                                                <input type="hidden" name="tid" value="{{ tile.getId }}">                                                
                                                                <input type="hidden" name="a" value="{{ user.getUid()|urlencrypt }}">                                       
                                                                <button style="border-radius:40px; width:80px; height:80px" class="btn rgba-stylish-strong waves-effect" type="submit"><img style="padding:5px; width:50px; height:50px" src="{{ asset('img/Mushroom Cloud Filled-100.png')}}"/></button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
{% endblock content %}


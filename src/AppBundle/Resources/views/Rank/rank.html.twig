{% extends 'base.html.twig' %}

{% block title %}Bauen{% endblock %}
{% block css %}
    {{ parent() }}
    <style>
        .col-md-12{
            padding:0;
        }


        .main-content {
            padding-bottom:60px;
        }

        p {
            text-align: justify;
            text-justify: auto;
        }

        @media only screen and (max-width: 500px) {
            img {
                width:100% !important;
            }
        }

    </style>
{% endblock css %}
{% block content %}
    <!-- Modal -->
    <div class="modal fade" id="help" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body text-xs-left ">
                    <div class="alert alert-info" role="alert">
                        <h4 class="modal-title">Zur Info:</h4>
                        <p>Hier siehst du die aktuelle Rangliste aller Spieler</p>
                        <p>Der Rang bezieht sich auf die insgesamt eroberte Gebiete eines Spielers</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                </div>
            </div>
        </div>
    </div>
    <!--Mask-->
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="color:#fff" >
                <div style="background: rgba(44, 62, 80, 0.85)" class="card text-xs-center main-content">
                    <h3 style="background: rgba(44, 62, 80, 1)" class="card-header white-text">Rangliste!&nbsp;&nbsp;
                        <!-- Trigger the modal with a button -->
                        <a style="color:white" data-toggle="modal" data-target="#help"><strong><i class="fa fa-question-circle" aria-hidden="true"></i></strong></a>
                    </h3>

                    <div class="card-block">
                        <div class="row">
                            <div class="col-xs-12">
                                <div style="background-color:transparent" class="card text-xs-left">
                                    <div style="background-color:transparent" class="card-header white-text">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="col-xs-6" style="padding-top: 10px; height:320px; background: url('{{ asset('img/star-half-blue.svg') }}') center right / auto 320px no-repeat">
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <img style="margin-top:100px; margin-bottom:auto; height:200px;float:right;" src="{{ asset('img/team/spacesuit-blue-left.svg') }}">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-6" style="padding-top: 10px; height:320px; background: url('{{ asset('img/star-half-red.svg') }}') center left / auto 320px no-repeat">
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <img style="margin-top:100px; margin-bottom:auto; height:200px; " src="{{ asset('img/team/spacesuit-red.svg') }}">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-5">
                                                {% for key,value in teamlist %}
                                                {% if value[0] == 'blue_dwarfs' %}
                                                <strong style="color:#33b5e5;  text-shadow: 3px 3px 0px #000; font-size:55px; font-weight:bold; float:right;" >{{ value[1] }}</strong>
                                                {% endif %}
                                                {% endfor %}
                                            </div>
                                            <div class="col-xs-2 text-xs-center">
                                                <strong style="color:#aaa;  text-shadow: 3px 3px 0px #000; font-size:55px; font-weight:bold;" >:</strong>
                                            </div>
                                            <div class="col-xs-5">
                                                {% for key,value in teamlist %}
                                                {% if value[0] == 'red_giants' %}
                                                <strong style="color:#FF8800;  text-shadow: 3px 3px 0px #000; font-size:55px; font-weight:bold; float:left;" >{{ value[1] }}</strong>
                                                {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-xs-2">
                                                <strong>Rang</strong>
                                            </div>
                                            <div class="col-xs-6">
                                                <strong>Spielername</strong>
                                            </div>
                                            <div class="col-xs-4 ">
                                                <strong>Eingenommene Gebiete</strong>
                                            </div>
                                        </div>
                                        <hr>
                                        {% for key,value in ranklist %}
                                            <div class="row">
                                                <div class="col-xs-2">
                                                    {{ key+1 }}
                                                </div>
                                                <div class="col-xs-6">
                                                    {{ value[0] }}
                                                </div>
                                                <div class="col-xs-4">
                                                    {{ value[1] }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <hr>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        {% if app.user %}
                                                            <a href="{{ path('map') }}" class="btn btn-inverse btn-lg btn-block" style="border-radius: 20px; background-color: #e57373 ; margin-left:0px !important">Zurück</a>
                                                        {% else %}
                                                            <a href="{{ path('home') }}" class="btn btn-inverse btn-lg btn-block" style="border-radius: 20px; background-color: #e57373 ; margin-left:0px !important">Zurück</a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock content %}
{% block navigation %}
{% endblock navigation %}


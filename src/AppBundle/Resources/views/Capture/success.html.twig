{% extends 'base.html.twig' %}
{% block title %}Dashboard{% endblock %} 
    {% block content %}
    
    <div class="container">
        <!--Card-->
        <div class="card">
            <div class="row">
                <div class="card-block">     
                    <div class="col-md-12">
                    <h3 class="card-title">Gebiet erfolgreich eingenommen!</h3>
                    </div>
                    <p> Du hast folgende Resourcen gewonnen: </p>
                    {% for resource in newResources %}
                    <div class="col-md-4">
                        <!--Card Success-->
                        <div style="background-color: {{ resource.getColour }}" class="card text-xs-center z-depth-2">
                            <div style="color:#fff" class="card-block">
                                <h2>{{ resource.getName_DE }}</h2>                             
                                <p style="font-size:40px; color:{{resource.getIconColour }}"><i  class="fa {{ resource.getIcon }}"></i></p>
                            </div>
                        </div>
                        <!--/.Card Success-->
                    </div>
                    {% endfor %}
                    <div class="col-xs-12">                            
                        <a href="{{ path('map')}}"><button style="height:100px; margin-bottom:20px;"  class="btn-secondary-outline waves-effect btn-block"><i class="fa fa-3x fa-map" aria-hidden="true"></i><h3><b>Zur√ºck zur Karte!</b></h3></button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <!--/.Mask-->
    {% endblock content %}


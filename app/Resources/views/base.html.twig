<!DOCTYPE html>
{% block html %}
<html class="full" lang="en">
{% block head %}
    <head>
        <title>Star Born - {% block title %}Home{% endblock %}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>Carousel Template for Bootstrap</title>

        {% block css %}

            <!-- Font Awesome -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css"/>

            <!-- Bootstrap core CSS -->
            <!-- <link rel="stylesheet" href="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css"> -->
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>

            <!-- Material Design Bootstrap -->
            <link href="{{ asset('css/mdb.min.css') }}" rel="stylesheet"/>

            <!-- Your custom styles (optional) -->
            <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>



        {% endblock css %}


    </head>
{% endblock head %}

{% block body %}
    <body>
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    {% block content %}
    {% endblock content %}


    {% block footer %}
    {% endblock footer %}

    {% block navigation %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <!-- Modal -->
            <div class="modal fade" id="menu" role="dialog">
                <div class="modal-dialog">        <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body text-xs-center ">
                            <div class="row">
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('map') }}"><i class="fa fa-3x fa-street-view"></i><br>Radar</a>
                                </div>
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{  path('collector') }}"><i class="fa fa-3x fa-shopping-basket"></i><br>Kollektor</a>
                                </div>
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('inventory') }}"><i class="fa fa-3x fa-shopping-bag"></i><br>Inventar</a>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('store') }}"><i class="fa fa-3x fa-balance-scale"></i><br>Store</a>
                                </div>
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('neo4j_profile', {'slug': app.user.username}) }}"><i class="fa fa-3x fa-user"></i><br>Profil</a>
                                </div>
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('rank') }}"><i class="fa fa-3x fa-user"></i><br>Rangliste</a>
                                </div>
                                <div class="col-xs-4">
                                    <a class="nav-link" href="{{ path('neo4j_logout') }}"><i class="fa fa-3x fa-sign-out"></i><br>Logout</a>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="menu-toggle-wrap">
                <button class="menu-toggle btn-default-outline waves-effect navbar-toggle" type="button" data-toggle="modal" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-star fa-2x" aria-hidden="true"></i>
                </button>
            </div>
            <footer class="footer text-xs-center">
                <div class=row" style="padding-top:10px; padding-right:10px;">
                    <div class="col-xs-6">
                        <div class="col-xs-12">
                            Stufe: {{  user.getLvl }}
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="col-xs-12">
                            <progress style="margin-top:5px; height:5px; margin-left:45px" class="progress progress-success" value="{{ user.getXP-((user.getLvl)*(user.getLvl)) }}" max="{{ ((user.getLvl+1)*(user.getLvl+1))-((user.getLvl)*(user.getLvl)) }}" style="color:000"></progress>
                        </div>
                    </div>
                </div>
            </footer>
            <!--/.Navbar-->
        {% endif %}
    {% endblock navigation %}


    {% block javascript %}
        <!-- SCRIPTS -->

        <!-- JQuery -->
        <script type="text/javascript" src="{{ asset('js/jquery-2.2.3.min.js') }}"></script>

        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="{{ asset('js/tether.min.js') }}"></script>

        <!-- Bootstrap core JavaScript -->
        <!-- <script src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script> -->

        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>

        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="{{ asset('js/mdb.min.js') }}"></script>

    {% endblock javascript %}
    </body>
{% endblock body%}
</html>
{% endblock html %}